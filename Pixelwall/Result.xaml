<Window x:Class="Pixelwall.Result"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pixelwall"
        mc:Ignorable="d"
        Title="Result" Height="600" Width="600">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="300"/>
			<RowDefinition Height="60"/>
			<RowDefinition />
		</Grid.RowDefinitions>
		
		<Border BorderBrush="Gray" BorderThickness="1" Grid.Row="0" Width="500" Height="280">
			<Image Name="GenerationResult" Grid.Row="0" RenderOptions.BitmapScalingMode="HighQuality"></Image>
		</Border>
		<Button Click="OnSaveClick" Grid.Row="1" Width="300" Height="50">Save as image</Button>
		<ScrollViewer Grid.Row="2">
			<WrapPanel Orientation="Horizontal" Name="MaterialList">
				
			</WrapPanel>
		</ScrollViewer>
	</Grid>
</Window>
