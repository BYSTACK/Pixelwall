<Window x:Class="Pixelwall.Result"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pixelwall"
        mc:Ignorable="d"
        Title="Result" Height="600" Width="600">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="300"/>
			<RowDefinition Height="60"/>
			<RowDefinition />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>

		<Border BorderBrush="Gray" BorderThickness="1" Grid.Row="0" Grid.ColumnSpan="2" Width="500" Height="280">
			<Image Name="GenerationResult" Grid.Row="0" RenderOptions.BitmapScalingMode="HighQuality"></Image>
		</Border>

		<Button Click="OnSaveTextClick" Width="200" Height="50" Grid.Row="1" Grid.Column="0">Save resources to a text file</Button>
		<CheckBox Name="ShowChunkGrid" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center">Draw chunk grid on image</CheckBox>
		<Button Click="OnSaveClick" Width="200" Height="40" Grid.Row="1" Grid.Column="1" Margin="0,10,0,0">Save an image</Button>

		<ScrollViewer Grid.Row="2" Grid.ColumnSpan="2" >
			<WrapPanel Orientation="Horizontal" Name="MaterialList">

			</WrapPanel>
		</ScrollViewer>
	</Grid>
</Window>
